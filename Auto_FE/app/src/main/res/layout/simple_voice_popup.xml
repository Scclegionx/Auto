<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/voice_popup_background"
    android:padding="20dp"
    android:elevation="8dp">

    <!-- Header -->
    <TextView
        android:id="@+id/tv_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đang ghi âm..."
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="10dp" />

    <!-- Timer -->
    <TextView
        android:id="@+id/tv_timer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginBottom="15dp" />

    <!-- Simple status line -->
    <View
        android:id="@+id/status_line"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@drawable/voice_line_gradient"
        android:layout_marginBottom="15dp" />

    <!-- Transcript -->
    <TextView
        android:id="@+id/tv_transcript"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đang lắng nghe..."
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:gravity="center"
        android:background="@drawable/transcript_background"
        android:padding="10dp"
        android:layout_marginBottom="15dp"
        android:minHeight="40dp" />

    <!-- Control buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginEnd="5dp"
            android:text="Hủy"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:background="@drawable/btn_cancel_background" />

        <Button
            android:id="@+id/btn_stop"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:text="Dừng"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:background="@drawable/btn_stop_background" />

    </LinearLayout>

</LinearLayout>
