<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="380dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/voice_popup_background"
    android:padding="28dp"
    android:elevation="12dp">

    <!-- Header vá»›i microphone icon vÃ  timer -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp">

        <ImageView
            android:id="@+id/iv_microphone"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@android:drawable/ic_btn_speak_now"
            android:layout_marginEnd="12dp"
            android:tint="@android:color/white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Äang ghi Ã¢m..."
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/sound_wave_container"
            android:padding="8dp" />

    </LinearLayout>

    <!-- Liquid Wave Container -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/liquid_wave_container"
        android:padding="20dp">

        <!-- Sound Wave Bars Container -->
        <LinearLayout
            android:id="@+id/sound_wave_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:weightSum="20">

            <!-- Wave bars will be added programmatically -->
            <!-- Each bar will be 8dp wide with 2dp margin -->
            
        </LinearLayout>

        <!-- Center pulse circle -->
        <View
            android:id="@+id/center_pulse"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center"
            android:background="@drawable/sound_wave_bar"
            android:alpha="0.8" />

    </FrameLayout>

    <!-- Status Card (giá»‘ng SmoothStatusCard) -->
    <LinearLayout
        android:id="@+id/status_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="14dp"
        android:background="@drawable/status_card_background"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_status_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸŽ¤"
            android:textSize="24sp"
            android:layout_marginEnd="14dp" />

        <TextView
            android:id="@+id/tv_status_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Äang nghe..."
            android:textColor="#1A1A1A"
            android:textSize="22sp"
            android:textStyle="normal" />

    </LinearLayout>

    <!-- Confirmation Card (giá»‘ng SmoothConfirmationCard) -->
    <LinearLayout
        android:id="@+id/confirmation_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="20dp"
        android:background="@drawable/confirmation_card_background"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â“"
            android:textSize="24sp"
            android:layout_marginEnd="12dp" />

        <TextView
            android:id="@+id/tv_confirmation_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textColor="#FF9800"
            android:textSize="22sp"
            android:textStyle="normal" />

    </LinearLayout>

    <!-- Success Card (giá»‘ng SmoothSuccessCard) -->
    <LinearLayout
        android:id="@+id/success_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="20dp"
        android:background="@drawable/success_card_background"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="âœ“"
            android:textSize="24sp"
            android:layout_marginEnd="12dp" />

        <TextView
            android:id="@+id/tv_success_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textColor="#4CAF50"
            android:textSize="22sp"
            android:textStyle="normal" />

    </LinearLayout>

    <!-- Error Card (giá»‘ng SmoothErrorCard) -->
    <LinearLayout
        android:id="@+id/error_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="20dp"
        android:background="@drawable/error_card_background"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="âš ï¸"
            android:textSize="24sp"
            android:layout_marginEnd="12dp" />

        <TextView
            android:id="@+id/tv_error_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textColor="#F44336"
            android:textSize="22sp"
            android:textStyle="normal" />

    </LinearLayout>

    <!-- Cancel Button (X) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btn_toggle_record"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="âœ•"
            android:textColor="@android:color/white"
            android:textSize="32sp"
            android:textStyle="bold"
            android:background="@drawable/red_circle_button"
            android:elevation="8dp"
            android:stateListAnimator="@null" />

    </LinearLayout>

</LinearLayout>
