# ========================================
# Auto NLP Hybrid System - Environment Configuration
# ========================================
# Copy this file to .env and update values as needed

# ========================================
# MODEL CONFIGURATION
# ========================================
MODEL_PATH=models/phobert_multitask_lr1e5
MODEL_CACHE_DIR=model_cache
DEVICE=auto

# ========================================
# API SERVER CONFIGURATION
# ========================================
API_HOST=0.0.0.0
API_PORT=8000
WORKERS=1
ALLOWED_ORIGINS=*

# ========================================
# LOGGING
# ========================================
LOG_LEVEL=INFO
LOG_FILE=reasoning_engine.log

# ========================================
# PYTHON PATH
# ========================================
# Windows
PYTHONPATH=src;.

# Linux/macOS  
# PYTHONPATH=src:.

# ========================================
# PERFORMANCE
# ========================================
TORCH_NUM_THREADS=4
OMP_NUM_THREADS=4

# ========================================
# HYBRID SYSTEM
# ========================================
HIGH_CONFIDENCE_THRESHOLD=0.85
ENTITY_CONFIDENCE_THRESHOLD=0.7
ENABLE_SPECIALIZED_EXTRACTORS=true

# ========================================
# SECURITY (Production)
# ========================================
API_KEY=
RATE_LIMIT=60
MAX_INPUT_LENGTH=500









